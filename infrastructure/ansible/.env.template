# Ansible Deployment Environment Variables
# Copy this file to .env and update the values for your deployment

# VPS Configuration (Required)
VPS_HOST=your.vps.ip.address
VPS_USER=root
SSH_PRIVATE_KEY_FILE=~/.ssh/blog_api_deploy

# Domain Configuration (Required)
DOMAIN_NAME=vrondelli.tech
SSL_EMAIL=rondelli.vladimir@gmail.com

# Git Repository Configuration (Required)
GIT_REPO_URL=git@github.com:vrondelli/blog-api.git
GIT_BRANCH=main

# Environment
ENVIRONMENT=production

# Application Configuration (Optional - defaults provided)
APP_NAME=nestjs-blog-api
APP_PORT=3000
APP_USER=deploy

# Database Configuration (Optional - defaults provided)
POSTGRES_DB=blog_db
POSTGRES_USER=blog_user
POSTGRES_VERSION=15

# Redis Configuration (Optional - defaults provided)
REDIS_PORT=6379

# Docker Configuration (Optional - defaults provided)
DOCKER_COMPOSE_VERSION=2.21.0

# SSL Configuration (Optional - defaults provided)
USE_SSL=true
SSL_PROVIDER=letsencrypt
